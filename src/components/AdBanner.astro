---
interface Props {
  slot?: string;
}

const { slot = "default-slot" } = Astro.props;
---

<div class="ad-banner">
  <ins class="adsbygoogle"
       style="display:block"
       data-ad-client="ca-pub-6683615425323300"
       data-ad-slot={slot}
       data-ad-format="auto"
       data-full-width-responsive="true"></ins>
</div>

<style>
  .ad-banner {
    margin: 2rem auto;
    text-align: center;
    min-height: 90px;
    background-color: #f9fafb;
    border-radius: 0.5rem;
    overflow: hidden;
    contain: layout style paint;
  }

  @media (max-width: 768px) {
    .ad-banner {
      margin: 1.5rem auto;
      min-height: 250px;
    }
  }
</style>

<script>
  (adsbygoogle = window.adsbygoogle || []).push({});
</script>